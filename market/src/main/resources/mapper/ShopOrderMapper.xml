  <select id="rankMonthPayForShop" parameterType="java.lang.Long" resultType="java.lang.String">
    select sum(order_total) from shop_order sd LEFT JOIN payments p ON sd.orders_id=p.order_id where shop_id=#{Shop} and TO_DAYS(NOW()) - TO_DAYS(sd.end_time) <![CDATA[ <= 31]]> AND p.pay_status=2;
  </select>
